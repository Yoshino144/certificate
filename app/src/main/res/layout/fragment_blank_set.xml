<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pure_white"
    tools:context=".Fragment.BlankFragment_set"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:background="@color/pure_white"
        android:layout_height="66px"/>

    <RelativeLayout
        android:id="@+id/login"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <TextView
            android:id="@+id/user_name"
            android:text="用户名"
            android:layout_marginLeft="20dp"
            android:textColor="@color/pure_black"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/user_name"
            android:text="啦啦啦啦"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/ic_launcher_round"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorGrey400"/>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="7dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:elevation="5dp">

        <TextView
            android:id="@+id/card_name"
            android:layout_width="wrap_content"
            android:text="..."
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textColor="@color/pure_black"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/ripple_set_one"
                app:mrl_rippleOverlay="false"
                app:mrl_rippleHover="true"
                app:mrl_rippleColor="@color/pc_green_two"
                app:mrl_rippleBackground="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@mipmap/set_set_black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="设置"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/pure_black"
                        android:layout_marginLeft="20dp"
                        android:layout_height="match_parent"/>

                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/ripple_set_two"
                app:mrl_rippleOverlay="false"
                app:mrl_rippleHover="true"
                app:mrl_rippleColor="@color/pc_green_two"
                app:mrl_rippleBackground="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@mipmap/set_night_black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="夜间"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/pure_black"
                        android:layout_marginLeft="20dp"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </com.balysv.materialripple.MaterialRippleLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>